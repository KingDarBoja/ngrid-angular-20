{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types", "libs-internal/local-types"],
    "types": ["dev-mode-types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@perbula-internal/*": [
        "libs-internal/*/src/index.ts",
        "libs-internal/*"
      ],
      "@perbula-internal/nx-repo-plugins": [
        "libs-internal/nx-repo-plugins/src/index.ts"
      ],
      "@perbula/*": ["libs/*/src/index.ts", "libs/*"],
      "@perbula/apps/*": ["apps/libs/*", "apps/libs/*/src/index.ts"],
      "@perbula/ngrid-bootstrap/lib/*": ["libs/ngrid-bootstrap/src/lib/*"],
      "@perbula/ngrid-cypress/lib/*": ["libs/ngrid-cypress/src/lib/*"],
      "@perbula/ngrid-material/lib/*": ["libs/ngrid-material/src/lib/*"],
      "@perbula/ngrid/core/lib/*": ["libs/ngrid/core/src/lib/*"],
      "@perbula/ngrid/lib/*": ["libs/ngrid/src/lib/*"]
    }
  },
  "exclude": ["dist", "node_modules", "tmp"]
}
