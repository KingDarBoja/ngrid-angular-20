{
  "name": "ngrid-dev-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "apps/ngrid-dev-app/src",
  "prefix": "perbula",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "options": {
        "outputPath": "dist/apps/ngrid-dev-app",
        "index": "apps/ngrid-dev-app/src/index.html",
        "main": "apps/ngrid-dev-app/src/main.ts",
        "polyfills": "apps/ngrid-dev-app/src/polyfills.ts",
        "tsConfig": "apps/ngrid-dev-app/tsconfig.app.json",
        "styles": ["apps/ngrid-dev-app/src/theme.scss"],
        "extractLicenses": false,
        "scripts": [],
        "vendorChunk": true,
        "buildOptimizer": false,
        "sourceMap": true,
        "optimization": false,
        "namedChunks": true
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/ngrid-dev-app/src/environment.ts",
              "with": "apps/ngrid-dev-app/src/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "buildOptimizer": true,
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "6kb",
              "maximumError": "10kb"
            }
          ]
        }
      },
      "outputs": ["{options.outputPath}"]
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "buildTarget": "ngrid-dev-app:build"
      },
      "configurations": {
        "docker": {
          "host": "0.0.0.0",
          "disableHostCheck": true
        },
        "production": {
          "buildTarget": "ngrid-dev-app:build:production"
        }
      },
      "continuous": true
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "ngrid-dev-app:build"
      }
    },
    "lint": {
      "executor": "@angular-devkit/build-angular:tslint",
      "options": {
        "tsConfig": [
          "apps/ngrid-dev-app/tsconfig.app.json",
          "apps/ngrid-dev-app/tsconfig.spec.json",
          "apps/ngrid-dev-app/tsconfig.editor.json"
        ],
        "exclude": ["**/node_modules/**", "!apps/ngrid-dev-app/**/*"]
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "main": "apps/ngrid-dev-app/src/test.ts",
        "tsConfig": "apps/ngrid-dev-app/tsconfig.spec.json",
        "karmaConfig": "apps/ngrid-dev-app/karma.conf.js",
        "polyfills": "apps/ngrid-dev-app/src/polyfills.ts",
        "styles": [],
        "scripts": [],
        "assets": []
      },
      "configurations": {
        "ci": {
          "watch": false,
          "progress": false,
          "browsers": "ChromeHeadlessCI"
        }
      },
      "outputs": ["coverage/apps/ngrid-dev-app"]
    }
  }
}
