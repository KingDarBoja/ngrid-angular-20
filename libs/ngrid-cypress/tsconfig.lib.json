{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "@perbula/*": ["dist/@perbula/*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "types": ["node"],
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/test-setup.ts", "**/*.spec.ts", "karma.conf.ts"]
}
